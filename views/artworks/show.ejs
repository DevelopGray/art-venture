<!-- <title><%= artwork.title %> - Details</title> -->
<% layout('./layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <!-- Display associated images, if available -->
            <% if (artwork.images && artwork.images.length> 0) { %>
                <div>
                    <% artwork.images.forEach(image=> { %>
                        <img class="card-img-top" src="<%= image %>" alt="<%= artwork.title %> Image" style="max-width: 100%; height: auto;">
                        <% }); %>
                </div>
                <% } else { %>
                    <p>No images available for this artwork.</p>
                <% } %>
            <div class="card-body">
                <h5 class="card-title"><%= artwork.title %></h5>
                <p class="card-text">Location: <%= artwork.location %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Artist: <%= artwork.artist %></li>
                <li class="list-group-item">Type: <%= artwork.type %></li>
                <li class="list-group-item">Description: <%= artwork.description %></li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" href="/artworks">Back to All Artworks</a>
                <a class="btn btn-warning" href="/artworks/<%= artwork._id %>/edit">Edit</a>
                <form class="d-inline" action="/artworks/<%= artwork._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>