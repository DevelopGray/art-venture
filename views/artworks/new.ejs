<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Artwork</title>
</head>

<body>
    <!-- Form to create a new artwork -->
    <form action="/artworks" method="POST">
        <!-- Input field for the title of the artwork -->
        <div>
            <label for="title">Title</label>
            <input type="text" name="artwork[title]" id="title" required>
        </div>

        <!-- Input field for a brief description of the artwork -->
        <div>
            <label for="description">Description</label>
            <textarea name="artwork[description]" id="description" required></textarea>
        </div>

        <!-- Input field for the artist's name -->
        <div>
            <label for="artist">Artist</label>
            <input type="text" name="artwork[artist]" id="artist" required>
        </div>

        <!-- Input field for the location of the artwork -->
        <div>
            <label for="location">Location</label>
            <input type="text" name="artwork[location]" id="location" required>
        </div>

        <!-- Dropdown menu for selecting the type of artwork -->
        <div>
            <label for="type">Type of Art</label>
            <select name="artwork[type]" id="type" required>
                <option value="" disabled selected>What kind of art is it?</option>
                <% artworkTypes.forEach(type=> { %>
                    <option value="<%= type %>">
                        <%= type %>
                    </option>
                    <% }); %>
            </select>
        </div>

        <!-- Input field for entering image URLs (optional) -->
        <div>
            <label for="images">Image URL</label>
            <input type="text" name="artwork[images][]" id="images" placeholder="Enter image URL">
        </div>

        <!-- Submit button to create the artwork -->
        <div>
            <button type="submit">Add Artwork</button>
        </div>
    </form>
</body>

</html>